<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vikas.conveter.MainActivity"
    android:background="#F5A668"

    >

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/s1"
        android:entries="@array/sp1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#68AAF5"
        android:layout_marginEnd="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="41dp"
        android:background="#68AAF5"
        android:id="@+id/s2"
        android:entries="@array/sp2"
        android:layout_below="@+id/s1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/e1"
        android:layout_below="@+id/s2"
        android:layout_alignEnd="@+id/s1"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="29dp"
        android:id="@+id/t1"
        android:textSize="30dp"
        android:textColor="#090500"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/s1" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/c"
        android:background="#F5A668"
        android:scaleType="fitCenter"
        android:onClick="function"
        android:id="@+id/b"
        android:layout_below="@+id/e1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
